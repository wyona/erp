<?xml version="1.0"?>
<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">
    <map:components>
    </map:components>
    <map:pipelines>
        <map:pipeline>
            <map:match pattern="">
                <map:generate type="xpathdirectory" src="data">
                    <map:parameter name="xpath" value="/invoice/@id"/>
                    <map:parameter name="xmlFiles" value="\.x.*$"/>
                </map:generate>
                <map:transform src="xslt/directory.xsl"/>
                <map:serialize type="xml"/>
            </map:match>
            <map:match pattern="sampleinvoice.odt">
                <map:read src="../openoffice/template/invoice.odt"/>
            </map:match>
            <map:match pattern="sampleinvoice.entries">
                <map:read src="zip:../openoffice/template/invoice.odt!/META-INF/manifest.xml"/>
                <map:generate src="zip:../openoffice/template/invoice.odt!/META-INF/manifest.xml"/>
                <map:transform src="xslt/manifest2zip.xsl"/>
                <map:serialize type="xml"/>
            </map:match>
            <map:match pattern="Manifest.dtd">
                <map:read src="internal/Manifest.dtd"/>
            </map:match>
            <map:match pattern="odtcontents-manipulate/*/content.xml">
                <map:generate src="zip:../openoffice/template/invoice.odt!/content.xml"/>
                <map:transform src="xslt/addinclude.xsl">
                    <map:parameter name="invoiceid" value="{1}"/>
                </map:transform>
                <map:transform type="xinclude"/>
                <map:serialize type="xml"/>
            </map:match>
            <map:match pattern="odtcontents/**">
                <map:read src="zip:../openoffice/template/invoice.odt!/{1}"/>
            </map:match>
            <map:match pattern="*.odt">
                <map:generate src="http://{request:serverName}:{request:serverPort}/{request:sitemapURIPrefix}sampleinvoice.entries"/>
                <map:transform src="xslt/manifest2zip.xsl">
                    <map:parameter name="invoiceid" value="{1}"/>
                </map:transform>
                <map:serialize type="zip"/>
            </map:match>
        </map:pipeline>
    </map:pipelines>
</map:sitemap>
